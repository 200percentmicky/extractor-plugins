{
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "tsconfig": "__tests__/tsconfig.json"
      }
    ]
  },
  "testEnvironment": "node",
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "clover"],
  "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
  "verbose": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@$": "<rootDir>/src"
  },
  "testTimeout": 30000
}
